def calculate_tarneeb_score():
    print("===== برنامج حساب نقاط الطرنيب =====")
    
    # استقبال البيانات من المستخدم
    try:
        bid = int(input(">> أدخل العدد المعلن (من 7 إلى 13): "))
        if bid < 7 or bid > 13:
            raise ValueError("المعلن يجب أن يكون بين 7 و 13")
            
        taken = int(input(">> أدخل عدد الطلاقات التي تم تحقيقها: "))
        if taken < 0 or taken > 13:
            raise ValueError("عدد الطلاقات يجب أن يكون بين 0 و 13")
            
    except ValueError as e:
        print(f"\nخطأ: {e}")
        return

    # حساب النقاط
    if taken >= bid:  # إذا حقق الفريق المعلن وعده
        score_bid_team = (bid * 10) + (taken - bid)
        score_opponent = 13 - taken
    else:  # إذا فشل الفريق المعلن
        score_bid_team = bid * -10
        score_opponent = taken + 10

    # عرض النتائج
    print("\n" + "="*40)
    print(f"نتيجة الفريق المعلن: {score_bid_team}")
    print(f"نتيجة الفريق المنافس: {score_opponent}")
    print("="*40)

# تشغيل البرنامج
if __name__ == "__main__":
    calculate_tarneeb_score()
